{
  "name": "norestate-backend",
  "version": "1.0.0",
  "description": "A modern full-stack real estate listing and management application.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build": "tsc && cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "start": "npm run serve",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "seed": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts ts-node --project tsconfig.json src/seed.ts"
  },
  "dependencies": {
    "@fastify/express": "^2.3.0",
    "@payloadcms/bundler-webpack": "^1.0.7",
    "@payloadcms/db-postgres": "^0.1.2",
    "@payloadcms/richtext-slate": "^1.0.11",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "fastify": "^4.24.3",
    "payload": "^3.44.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
